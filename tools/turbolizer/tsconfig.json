    "src/views/schedule-view.ts",
    "src/views/disassembly-view.ts",
    "src/views/text-view.ts",
    "src/views/info-view.ts",
    "src/node.ts",
    "src/edge.ts",
    "src/graph.ts",
    "src/node-label.ts",
    "src/source-resolver.ts",
    "src/graph-layout.ts",
